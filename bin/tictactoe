#!/usr/bin/env ruby

require_relative '../config/environment'


def play_game
  puts "Welcome to Tic Tac Toe! We hope you enjoy this evening's game."
  puts "Before we get started, how many players will be participating?"
  puts"
    0 - Computer vs Computer
    1 - Human vs Computer
    2 - Human vs Human"

  player_input = gets.strip
  if player_input == "0"
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"))
  elsif player_input == "1"
    Game.new(Players::Human.new("X"), Players::Computer.new("O"))
  elsif player_input == "2"
    Game.new(Players::Human.new("X"), Players::Human.new("O"))
  end
end

play_game
